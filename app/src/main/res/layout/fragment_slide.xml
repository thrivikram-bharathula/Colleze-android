<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blue">

    <TextView
        android:id="@+id/slideHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:fontFamily="@font/nunito_sans_condensed_bold"
        android:text="Title"
        android:textSize="28sp"/>

    <TextView
        android:id="@+id/slideDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/slideHeading"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:text="Description"
        android:fontFamily="@font/nunito_sans_condensed_regular"
        android:textSize="16sp"
        android:gravity="center"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/slideAnimation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/slideDescription"
        android:layout_centerHorizontal="true"
        app:lottie_loop="true"
        app:lottie_autoPlay="true"
        app:lottie_fileName="notifications.json"
        android:layout_marginTop="44dp" />
</RelativeLayout>
